<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_listTunggu"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:elevation="16dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gambar_buku"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/judul_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:textColor="#424242"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/gambar_buku"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/pengarang_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/gambar_buku"
            app:layout_constraintTop_toBottomOf="@id/judul_buku" />


        <TextView
            android:id="@+id/status_konfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/gambar_buku"
            app:layout_constraintTop_toBottomOf="@id/pengarang_buku" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>