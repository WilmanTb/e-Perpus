<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_listPermintaan"
    android:layout_width="230dp"
    android:layout_height="100dp"
    android:elevation="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gambar_buku"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/buku_1"/>

        <TextView
            android:id="@+id/nama_peminjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar_buku"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Rio Sianturi"
            android:fontFamily="sans-serif"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/npm_peminjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar_buku"
            app:layout_constraintTop_toBottomOf="@+id/nama_peminjam"
            android:text="180840001"
            android:fontFamily="sans-serif"
            android:textSize="13sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tanggal_pinjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar_buku"
            app:layout_constraintTop_toBottomOf="@+id/npm_peminjam"
            android:text="Sat Oct 15 11:40:09 GMT+07:00 2022"
            android:fontFamily="sans-serif"
            android:textSize="13sp"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>